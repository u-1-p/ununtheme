.article_text
  padding-top 100px
  margin 0 auto
  width 100%
  max-width 980px
  text-align center

  h1
    font-weight bold
    text-align left
    padding-bottom 0.5em 
  p
    line-height 1.7em
    font-size 18px
    text-align left
  img
    margin 0 auto
    display block
    width 100%
    max-width 1068px

.set
  padding-bottom 3%


.article_line
  width 60%
  padding-bottom 100px
.article_title
  font-size 20px
.article_info
  text-align left
  padding-bottom 0.4em
  
.article_back
  text-align center
  margin-top 20px
  margin-bottom 113px
  margin-left auto
  margin-right auto
  a
    width 200px
    text-decoration none
    text-align center
    padding 8px 80px 10px
    color $color_text
    border:0.1em solid $color_gold
  a:hover
    color $color_gold
    

.article_namebox
  overflow hidden
  .article_name
    float left

.article_reblog
  text-align left
  margin-bottom 50px
  a
    color $color_text
    text-decoration none
  a:hover
    color $color_gold
  
.article_tag
  font-size 0.7em
  text-align left
  margin-bottom 0.3em
  ul,li
    display: inline
  li
    margin-right 0.5em
.article_body
  h1
    font-weight bold
    padding-bottom 0.4em
  h2
    text-align left
    font-weight bold
    padding-bottom 0.3em
  hr
    border-color #C8B88A
    margin-top 0.5em
    margin-bottom 0.3em
    width 20%
  a
    color $color_text
    text-decoration none
  a:hover
    color $color_gold



